<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="TaskManager\Projects\Domain\Entity\Project" table="projects">
        <id name="id" type="project_id" length="36" />
        <embedded name="information" class="TaskManager\Projects\Domain\ValueObject\ProjectInformation" use-column-prefix="false" />
        <field name="status" type="project_status" />
        <embedded name="owner" class="TaskManager\Projects\Domain\ValueObject\ProjectOwner" use-column-prefix="false" />
    </entity>
</doctrine-mapping>