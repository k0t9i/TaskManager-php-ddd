<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="TaskManager\Users\Domain\Entity\User" table="users">
        <id name="id" type="user_id" length="36" />
        <id name="email" type="user_email" length="255" />
        <embedded name="profile" class="TaskManager\Users\Domain\ValueObject\UserProfile" use-column-prefix="false" />
    </entity>
</doctrine-mapping>