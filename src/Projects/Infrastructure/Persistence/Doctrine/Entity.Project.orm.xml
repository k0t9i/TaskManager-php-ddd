<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="TaskManager\Projects\Domain\Entity\Project" table="projects">
        <id name="id" type="project_id" length="36" />
        <embedded name="information" class="TaskManager\Projects\Domain\ValueObject\ProjectInformation" use-column-prefix="false" />
        <field name="status" type="project_status" />
        <embedded name="owner" class="TaskManager\Projects\Domain\ValueObject\ProjectOwner" use-column-prefix="false" />
        <many-to-many field="participants" target-entity="TaskManager\Projects\Domain\ValueObject\Participant" orphan-removal="true">
            <cascade>
                <cascade-persist />
            </cascade>
            <join-table name="project_participants">
                <join-columns>
                    <join-column name="project_id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="participant_project_id" referenced-column-name="project_id" />
                    <join-column name="participant_user_id" referenced-column-name="user_id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        <many-to-many field="requests" target-entity="TaskManager\Projects\Domain\Entity\Request">
            <cascade>
                <cascade-persist />
            </cascade>
            <join-table name="project_requests">
                <join-columns>
                    <join-column name="project_id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="request_id" unique="true" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>